{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": false
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.d.ts",
    "./typings/tsd.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "externals": [
      "./typings/tsd.d.ts",
      "./src/typings/redux-router.d.ts",
      "./src/typings/history.d.ts",
      "./src/typings/material-ui.d.ts",
      "./src/typings/radium.d.ts",
      "./src/typings/whatwg-fetch.d.ts"
    ]
  }
}